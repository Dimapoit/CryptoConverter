<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ChooseLevelFragment">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/choice_level" />
    <Button
        android:id="@+id/btn_level_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_level"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"/>
    <Button
        android:id="@+id/btn_level_easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="легкий"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/holo_green_light"/>
    <Button
        android:id="@+id/btn_level_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="средний"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/holo_orange_light"/>
    <Button
        android:id="@+id/btn_level_hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="тяжелый"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/holo_red_light"/>


</androidx.appcompat.widget.LinearLayoutCompat>